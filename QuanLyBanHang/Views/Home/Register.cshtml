<body class="">

    <!-- Main Section-->
    <section class="d-flex justify-content-center align-items-start vh-100 py-5 px-3 px-md-0">

        <!-- Login Form-->
        <div class="d-flex flex-column w-100 align-items-center">

            <!-- Logo-->
            <a href="/" class="d-table mt-5 mb-4 mx-auto">
                <div class="d-flex align-items-center">
                    <svg class="f-w-5 me-2 text-primary d-flex align-self-center lh-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 203.58 182"><path d="M101.66,41.34C94.54,58.53,88.89,72.13,84,83.78A21.2,21.2,0,0,1,69.76,96.41,94.86,94.86,0,0,0,26.61,122.3L81.12,0h41.6l55.07,123.15c-12-12.59-26.38-21.88-44.25-26.81a21.22,21.22,0,0,1-14.35-12.69c-4.71-11.35-10.3-24.86-17.53-42.31Z" fill="currentColor" fill-rule="evenodd" fill-opacity="0.5" /><path d="M0,182H29.76a21.3,21.3,0,0,0,18.56-10.33,63.27,63.27,0,0,1,106.94,0A21.3,21.3,0,0,0,173.82,182h29.76c-22.66-50.84-49.5-80.34-101.79-80.34S22.66,131.16,0,182Z" fill="currentColor" fill-rule="evenodd" /></svg>
                    <span class="fw-black text-uppercase tracking-wide fs-6 lh-1">AP shop</span>
                </div>
            </a>
            <!-- Logo-->

            <div class="shadow-lg rounded p-4 p-sm-5 bg-white form mb-4">
                <h3 class="fw-bold mb-3">ĐĂNG KÝ</h3>
                <div class="mt-4">
                    <div class="form-group">
                        <label class="form-label" for="Name">Họ và tên</label>
                        <input type="text" class="form-control" id="Name" placeholder="Nhập tên của bạn" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="UserName">Username</label>
                        <input type="text" class="form-control" id="UserName" placeholder="Nhập tên đăng nhập" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="Password">Password</label>
                        <input type="password" class="form-control" id="Password" placeholder="Nhập mật khẩu">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="Email">Email</label>
                        <input type="email" class="form-control" id="Email" placeholder="name@email.com" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="SDT">Số điện thoại</label>
                        <input type="tel" class="form-control" id="SDT" maxlength="10" pattern="0[0-9]{9}" placeholder="0111111111" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="NgaySinh">Ngày sinh</label>
                        <input type="date" class="form-control" min="1900-01-01" value="2004-11-19" id="NgaySinh" required>
                    </div>
                    <div class="form-group">
                        <label for="DiaChi" class="control-label">Địa chỉ</label>
                        <input id="DiaChi" class="form-control" />
                    </div>
                    <button class="btn btn-primary d-block w-100 my-4" onclick="register()">ĐĂNG KÝ</button>
                </div>
                <p class="d-block text-center text-muted small">
                    Bạn đã có tài khoản? <a class="text-muted text-decoration-underline" href="/Home/Login">Đăng nhập ngay.</a>
                </p>
            </div>
        </div>
        <!-- / Login Form-->

    </section>
    <!-- / Main Section-->
    <!-- Theme JS -->
    <!-- Vendor JS -->

    <script>
        function register() {
            $.ajax({
                url: '/Home/OnRegister',
                data: {
                    name: $("#Name").val(),
                    userName: $("#UserName").val(),
                    password: $("#Password").val(),
                    sDT: $("#SDT").val(),
                    diaChi: $("#DiaChi").val(),
                    email: $("#Email").val(),
                    ngaySinh: $("#NgaySinh").val()
                },
                type: "GET",
                success: function (response) {
                    if (response == null || response == undefined || response.length == 0) {
                        swal("Oops!", "Đã xảy ra lỗi!", "error");
                    } else {
                        if (response == true) {
                            swal("Đăng ký thành công", "Vui lòng đăng nhập", "success").then(function () {
                                window.location = "/Home/Login";
                            });
                        } else {
                            swal("Đăng ký thất bại", response, "error");
                        }
                    }
                },
                error: function () {
                    swal("Oops!", "Đã xảy ra lỗi!", "error");
                }
            })
        }

    </script>

